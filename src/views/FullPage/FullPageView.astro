---
import type { Resource } from '@tomic/lib';
import PageFullPage from './PageFullPage.astro';
import { website } from '../../ontologies/website';
import BlogIndexFullPage from './BlogIndexFullPage.astro';
import BlogPostFullPage from './BlogPostFullPage.astro';

type Props = {
  resource: Resource;
};

const { resource } = Astro.props;
---

{resource.hasClasses(website.classes.page) && <PageFullPage {resource} />}
{
  resource.hasClasses(website.classes.blogIndexPage) && (
    <BlogIndexFullPage {resource} />
  )
}
{
  resource.hasClasses(website.classes.blogpost) && (
    <BlogPostFullPage {resource} />
  )
}
