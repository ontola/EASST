---
import { marked } from 'marked';
import type { Resource } from '@tomic/lib';
import type { TextBlock } from '../../ontologies/website';
import Container from '../../components/Layout/Container.astro';

type Props = {
  resource: Resource<TextBlock>;
};

const { resource } = Astro.props;

const content = marked.parse(resource.props.description);
---

<Container>
  <div
    set:html={content}
    class='text-block'
    class:list={{ ['column-layout']: resource.props.columnLayout }}
  />
</Container>

<style>
  .text-block {
    padding-block: var(--t-spacing-5);

    > h2:first-child,
    > h3:first-child {
      margin-top: 0px;
    }
    p {
      max-width: 75ch;
    }
  }

  .column-layout {
    column-width: 35ch;
    column-gap: 2rem;
    p {
      text-align: justify;
      @media (max-width: 713px) {
        text-align: left;
      }
    }
  }
</style>
